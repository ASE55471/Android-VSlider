<resources>
    <declare-styleable name="Slider">
        <attr name="max" format="integer" />
        <attr name="orientation" format="enum" >
            <enum name="vertical" value="0"/>
            <enum name="horizontal" value="1"/>
        </attr>
        <attr name="progressDrawable" format="color|reference" />
        <attr name="progress" format="integer" />
        <attr name="progressStart" format="integer" />
        <attr name="progressDrawableDisplayType" format="enum" >
            <enum name="start" value="0"/>
            <enum name="middle" value="1"/>
            <enum name="end" value="2"/>
        </attr>
        <attr name="thumbnail" format="reference" />
        <attr name="thumbnailPress" format="reference" />
        <attr name="progressDrawableMinWidth" format="dimension" />
        <attr name="touchAreaRatio" format="float" />

        <attr name="thumbnailDrawableRatio" format="float" />
        <attr name="thumbnailPressDrawableRatio" format="float" />

        <attr name="relativeTouchPoint" format="boolean" />
        <attr name="rotateThumbnailDrawableDegree" format="integer" />

        <attr name="progressAreaOffset" format="dimension" />

        <attr name="step" format="integer" />
        <attr name="smallStep" format="integer" />

    </declare-styleable>
</resources>
