<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.ltgd.vslider.Slider
        android:id="@+id/slider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#ccc"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:orientation="horizontal"
        app:progressDrawableDisplayType="middle"
        app:progressDrawableMinWidth="24dp"
        app:progressStart="70"
        />

    <com.ltgd.vslider.Slider
        android:id="@+id/slider2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="#CCCCCC"
        android:padding="48dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slider"
        app:orientation="vertical"
        app:progressStart="35"
        app:progress="25"
        app:progressDrawableDisplayType="middle"
        app:progressDrawableMinWidth="24dp"
        app:thumbnailDrawableRatio="1.3"
        app:thumbnailPressDrawableRatio="1.6"
        app:relativeTouchPoint="true"
        />

</androidx.constraintlayout.widget.ConstraintLayout>